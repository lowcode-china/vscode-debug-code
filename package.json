{
  "name": "vscode-debug-code",
  "displayName": "Debug code",
  "description": "Visual Studio Code debugger extension for python/golang/javascript/typescript/command/pytest/jest/go test",
  "publisher": "pychina",
  "icon": "resources/logo.png",
  "version": "0.0.4",
  "license": "MIT",
  "activationEvents": [
    "*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lowcode-zh/vscode-debug-code.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "debug-code.debugFile",
        "title": "Debug File",
        "icon": {
          "light": "./resources/debug-light.svg",
          "dark": "./resources/debug-dark.svg"
        }
      },
      {
        "command": "debug-code.debugHere",
        "title": "Debug Here"
      },
      {
        "command": "debug-code.debugLast",
        "title": "Debug Last"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId in debug-code:languages",
          "command": "debug-code.debugFile",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "when": "resourceLangId in debug-code:languages",
          "command": "debug-code.debugFile",
          "group": "navigation"
        }
      ],
      "editor/title/context": [
        {
          "when": "resourceLangId in debug-code:languages",
          "command": "debug-code.debugFile",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceLangId in debug-code:languages",
          "command": "debug-code.debugFile",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/lodash": "^4.14.202",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@swc/core": "^1.3.102",
    "@swc/jest": "^0.2.29",
    "chalk": "4.1.2",
    "fs-extra": "^11.2.0",
    "jest": "^29.7.0",
    "lodash": "^4.17.21",
    "read-pkg-up": "^7.0.1",
    "ts-node": "^10.9.2"
  }
}
